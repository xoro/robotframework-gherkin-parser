{
  "name": "robotcode-gherkin-extended",
  "displayName": "RobotCode GherkinParser Support (Extended)",
  "description": "GherkinParser Support for RobotCode and Robot Framework with Go to Definition",
  "icon": "icons/icon.png",
  "publisher": "d-biehl",
  "version": "0.5.0",
  "author": {
    "name": "Daniel Biehl",
    "url": "https://github.com/d-biehl/"
  },
  "homepage": "https://github.com/d-biehl/robotframework-gherkin-parser",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-biehl/robotframework-gherkin-parser"
  },
  "bugs": {
    "url": "https://github.com/d-biehl/robotframework-gherkin-parser/issues"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Programming Languages",
    "Testing",
    "Debuggers",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "Test",
    "Testing",
    "RobotFramework",
    "Robot Framework",
    "Robot",
    "Keyword Driven",
    "Data Driven",
    "Acceptance Testing",
    "Acceptance Test Driven Development",
    "Test Driven",
    "Behavior Driven Development",
    "BDD",
    "Behavior Driven Testing",
    "BDT",
    "Robotic Process Automation",
    "RPA"
  ],
  "featureFlags": {
    "usingNewInterpreterStorage": true
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "Only Partial IntelliSense is supported."
    },
    "virtualWorkspaces": {
      "supported": "limited",
      "description": "Only Partial IntelliSense supported."
    }
  },
  "activationEvents": [
    "workspaceContains:**/*.{feature,feature.md}"
  ],
  "galleryBanner": {
    "theme": "dark",
    "color": "#111111"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/d-biehl"
  },
  "main": "./out/extension.js",
  "contributes": {
    "robotCode": {
      "fileExtensions": [
        "feature",
        "feature.md"
      ],
      "languageIds": [
        "gherkin",
        "markdown"
      ]
    },
    "activationEvents": [
      "workspaceContains:**/*.{feature,feature.md}"
    ],
    "languages": [
      {
        "id": "gherkin",
        "aliases": [
          "Gherkin",
          "Cucumber"
        ],
        "icon": {
          "light": "./icons/cucumber.png",
          "dark": "./icons/cucumber.png"
        },
        "extensions": [
          ".feature"
        ]
      },
      {
        "id": "markdown",
        "aliases": [
          "Markdown"
        ],
        "icon": {
          "light": "./icons/cucumber.png",
          "dark": "./icons/cucumber.png"
        },
        "extensions": [
          ".feature.md"
        ]
      }
    ],
    "grammars": [
      {
        "language": "gherkin",
        "scopeName": "text.gherkin.feature",
        "path": "./syntaxes/gherkin-classic.tmLanguage"
      }
    ],
    "breakpoints": [
      {
        "language": "gherkin"
      },
      {
        "language": "markdown",
        "when": "resourceFilename =~ /^.*\\.feature\\.md$/"
      }
    ],
    "configuration": {
      "title": "Gherkin Formatting",
      "properties": {
        "gherkinParser.format.indentation.profile": {
          "type": "string",
          "default": "scs",
          "order": 0,
          "enum": ["gherkinDefault", "scs", "custom"],
          "enumDescriptions": [
            "Standard Cucumber indentation (uniform 2-space levels for all keywords)",
            "SCS profile (Given: 4, When/Then: 5, And/But: 6 - aligned for visual clarity)",
            "Custom - configure indentation for each keyword via the setting below"
          ],
          "description": "Select an indentation profile for Gherkin formatting."
        },
        "gherkinParser.format.indentation.custom": {
          "type": "object",
          "order": 1,
          "default": {
            "Feature": 0,
            "Background": 2,
            "Scenario": 2,
            "Step": 4,
            "Examples": 2,
            "example": 4,
            "given": 4,
            "when": 5,
            "then": 5,
            "and": 6,
            "but": 6,
            "featureTag": 0,
            "scenarioTag": 2
          },
          "markdownDescription": "Custom indentation values (only used when profile is `custom`). Edit in `settings.json` to configure.",
          "properties": {
            "Feature": { "type": "number", "minimum": 0, "description": "Spaces before the Feature keyword" },
            "Background": { "type": "number", "minimum": 0, "description": "Spaces before the Background keyword" },
            "Scenario": { "type": "number", "minimum": 0, "description": "Spaces before the Scenario keyword" },
            "Step": { "type": "number", "minimum": 0, "description": "Default spaces before step keywords (fallback)" },
            "Examples": { "type": "number", "minimum": 0, "description": "Spaces before the Examples keyword" },
            "example": { "type": "number", "minimum": 0, "description": "Spaces before example table rows" },
            "given": { "type": "number", "minimum": 0, "description": "Spaces before Given steps" },
            "when": { "type": "number", "minimum": 0, "description": "Spaces before When steps" },
            "then": { "type": "number", "minimum": 0, "description": "Spaces before Then steps" },
            "and": { "type": "number", "minimum": 0, "description": "Spaces before And steps" },
            "but": { "type": "number", "minimum": 0, "description": "Spaces before But steps" },
            "featureTag": { "type": "number", "minimum": 0, "description": "Spaces before feature-level tags" },
            "scenarioTag": { "type": "number", "minimum": 0, "description": "Spaces before scenario-level tags" }
          },
          "additionalProperties": false
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint --ext .ts,.tsx,.js .",
    "lint-fix": "eslint --ext .ts,.tsx,.js --fix .",
    "test": "node ./out/test/runTest.js"
  },
  "extensionDependencies": [
    "d-biehl.robotcode"
  ],
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "@cucumber/gherkin": "^27.0.0",
    "@cucumber/gherkin-utils": "^8.0.5"
  },
  "devDependencies": {
    "@types/node": "^18.17.1",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "@vscode/vsce": "^2.23.0",
    "ovsx": "^0.8.3",
    "prettier": "^3.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  }
}
